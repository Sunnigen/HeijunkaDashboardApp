                    .EnableTooltip(true)
                )
                .AllowDragAndDrop(false)
                .AllowResizing(false)
                .ActionBegin("onActionBegin")
                .EventRendered("onEventRendered") 
                .ActionFailure("onActionFailure") 
                .PopupOpen("onPopupOpen")
                .PopupClose("onPopupClose")
                .EditorTemplate("#EventEditorTemplate") 

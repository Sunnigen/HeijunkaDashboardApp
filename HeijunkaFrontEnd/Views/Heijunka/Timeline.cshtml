                        .Fields(Fields => Fields.DataSource(ViewBag.DataSource)
                            .Id("Id")
                            .Text("Name")
                            .Text("OrderNumber")
                            .Selected("is_selected")
                            .HtmlAttributes("hasAttribute")
                        )
